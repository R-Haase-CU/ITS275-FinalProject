               <children>
                  <Label text="Date of Valuation:">
                     <font>
                        <Font name="System Bold" size="14.0" />
                     </font>
                     <HBox.margin>
                        <Insets left="5.0" right="10.0" />
                     </HBox.margin>
                  </Label>
                  <TextField id="dateInput" prefHeight="25.0" prefWidth="96.0" promptText="Date" />
                  <Button id="runButton" defaultButton="true" mnemonicParsing="false" onAction="#buttonClick" text="Check Value">
                     <HBox.margin>
                        <Insets left="5.0" right="5.0" />
                     </HBox.margin>
                  </Button>
               </children>
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin>
            </HBox>
            <HBox>
               <children>
                  <Label text="Value of Card:">
                     <font>
                        <Font name="System Bold" size="14.0" />
                     </font>
                     <HBox.margin>
                        <Insets left="5.0" right="10.0" />
                     </HBox.margin>
                  </Label>
                  <Label fx:id="valueOutput" text="Label" />
               </children>
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin>
            </HBox>
         </children>
      </VBox>
      <ImageView fitHeight="400.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../../../Back.jpg" />
         </image>
      </ImageView>
   </children>
